{
  // Layer3 / big repo settings
  "files.exclude": {
    "**/node_modules": true,
    "**/.next": true,
    "**/dist": true,
    "**/coverage": true,
    // non-l3 excludes
    "**/*.js.map": true,
    "**/.DS_Store": true,
    "**/.git": true,
    "**/.hg": true,
    "**/.svn": true,
    "**/*.js": {
      "when": "$(basename).ts"
    },
    "**/*?.js": {
      "when": "$(basename).tsx"
    }
  },
  "files.watcherExclude": {
    "**/.git/objects/**": true,
    "**/.git/subtree-cache/**": true,
    "**/node_modules/*/**": true,
    "**/dist/**": true,
    "**/.next/**": true,
    "**/coverage/**": true
  },
  "typescript.tsserver.maxTsServerMemory": 8192,
  "typescript.tsserver.useSyntaxServer": "never",
  "typescript.tsserver.watchOptions": {
    "watchFile": "useFsEvents",
    "watchDirectory": "useFsEvents",
    "fallbackPolling": "dynamicPriorityPolling"
  },
  "typescript.disableAutomaticTypeAcquisition": true,
  "typescript.tsserver.experimental.enableProjectDiagnostics": false,

  // Editor Core Settings
  "editor.acceptSuggestionOnCommitCharacter": false,
  "editor.accessibilitySupport": "off",
  "editor.autoClosingQuotes": "always",
  "editor.autoIndent": "advanced",
  "editor.bracketPairColorization.enabled": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.fontFamily": "Liga SFMono Nerd Font,SF Mono,MonoLisa,DankMono-Bold, OperatorMonoLig-book,OperatorMonoSSMLig-book,FiraCode-retina, Operator Mono",
  "editor.fontLigatures": true,
  "editor.fontSize": 14.47,
  "editor.formatOnPaste": true,
  "editor.formatOnSave": true,
  "editor.guides.bracketPairs": true,
  "editor.inlineSuggest.enabled": true,
  "editor.lineHeight": 1.174,
  "editor.lineNumbers": "relative",
  "editor.minimap.enabled": false,
  "editor.multiCursorModifier": "ctrlCmd",
  "editor.selectionHighlight": false,
  "editor.smoothScrolling": false,
  "editor.snippetSuggestions": "top",
  "editor.stickyScroll.enabled": true,
  "editor.suggest.localityBonus": true,
  "editor.suggestSelection": "recentlyUsedByPrefix",
  "editor.tabCompletion": "on",
  "editor.tabSize": 2,
  "editor.wordWrap": "on",

  // Quick Suggestions Configuration
  "editor.quickSuggestions": {
    "comments": false,
    "other": true,
    "strings": true
  },

  // Language-Specific Settings
  "[astro]": {
    "editor.defaultFormatter": "astro-build.astro-vscode"
  },
  "[markdown]": {
    "editor.defaultFormatter": "yzhang.markdown-all-in-one"
  },
  "[svg]": {
    "editor.defaultFormatter": "jock.svg"
  },
  "[typescript]": {
    "editor.autoClosingBrackets": "languageDefined"
  },
  "[typescriptreact]": {
    "editor.autoClosingBrackets": "languageDefined"
  },
  "[yaml]": {
    "editor.autoIndent": "advanced",
    "editor.formatOnSave": false,
    "editor.insertSpaces": true,
    "editor.quickSuggestions": {
      "comments": "on",
      "other": "on",
      "strings": "on"
    },
    "editor.tabSize": 2
  },

  // File Management
  "files.autoSave": "onFocusChange",
  "files.insertFinalNewline": true,
  "files.associations": {
    "*.css": "css"
  },

  // Window Settings
  "window.titleBarStyle": "custom",
  "window.autoDetectColorScheme": true,
  "window.density.editorTabHeight": "compact",
  "window.newWindowDimensions": "maximized",
  "window.title": "${rootName}",
  "window.commandCenter": false,

  // Workbench Settings
  "workbench.colorTheme": "Material Theme Palenight High Contrast",
  "workbench.iconTheme": "catppuccin-macchiato",
  "workbench.statusBar.visible": true,
  "workbench.list.defaultFindMode": "filter",
  "workbench.editor.enablePreviewFromCodeNavigation": true,
  "workbench.editor.revealIfOpen": true,
  "workbench.editor.enablePreviewFromQuickOpen": true,
  "workbench.preferredDarkColorTheme": "Material Theme Palenight High Contrast",
  "workbench.preferredHighContrastColorTheme": "GitHub Dark High Contrast",
  "workbench.preferredLightColorTheme": "Material Theme Palenight High Contrast",

  // Theme Customizations
  "workbench.colorCustomizations": {
    "[In Bed by 7pm]": {
      "tab.unfocusedInactiveForeground": "#A3BDFC"
    },
    "[Night Owl (No Italics)]": {
      "activityBar.background": "#000C1D",
      "activityBar.border": "#102a44",
      "sideBar.background": "#001122",
      "sideBar.border": "#102a44",
      "sideBar.foreground": "#8BADC1"
    },
    "[Night Owl]": {
      "activityBar.background": "#000C1D",
      "activityBar.border": "#102a44",
      "sideBar.background": "#001122",
      "sideBar.border": "#102a44",
      "sideBar.foreground": "#8BADC1"
    }
  },

  // Language Support Settings
  "typescript.check.npmIsInstalled": false,
  "typescript.format.insertSpaceAfterSemicolonInForStatements": false,
  "typescript.suggest.completeFunctionCalls": true,
  "typescript.updateImportsOnFileMove.enabled": "always",
  "javascript.format.insertSpaceAfterSemicolonInForStatements": false,
  "javascript.updateImportsOnFileMove.enabled": "always",
  "javascript.validate.enable": false,
  "css.lint.unknownAtRules": "ignore",
  "scss.validate": false,

  // Extension Settings
  "github.copilot.enable": {
    "*": false,
    "plaintext": true,
    "markdown": true,
    "scminput": false,
    "yaml": true
  },
  "prettier.singleQuote": true,
  "cSpell.enabled": true,
  "cSpell.userWords": [
    "backlink",
    "Backlinked",
    "backlinking",
    "backlinks",
    "clsxm",
    "neovim",
    "SOLANA",
    "trpc"
  ],
  "emmet.showExpandedAbbreviation": "never",
  "eslint.alwaysShowStatus": true,
  "eslint.format.enable": true,
  "eslint.lintTask.enable": true,
  "svelte.enable-ts-plugin": true,
  "go.toolsManagement.autoUpdate": true,

  // Terminal Settings
  "terminal.external.osxExec": "Kitty.app",
  "terminal.integrated.env.osx": {
    "Q_NEW_SESSION": "1"
  },
  "terminal.integrated.fontFamily": "Roboto Mono Light for Powerline",

  // Misc Settings
  "ActiveFileInStatusBar.fullpath": false,
  "breadcrumbs.enabled": true,
  "security.workspace.trust.untrustedFiles": "open",
  "extensions.experimental.affinity": {
    "asvetliakov.vscode-neovim": 1
  },
  "cursor.cpp.disabledLanguages": ["scminput"],
  "git.mergeEditor": false,

  // Tailwind CSS
  "tailwindCSS.includeLanguages": {
    "typescript": "javascript",
    "typescriptreact": "javascript"
  },

  // Macros
  "macros": {
    "revealFileInTree": [
      "workbench.files.action.focusFilesExplorer",
      "workbench.files.action.showActiveFileInExplorer"
    ],
    "revealOnlyFileInTree": [
      "workbench.files.action.focusFilesExplorer",
      "list.collapseAll",
      "workbench.files.action.showActiveFileInExplorer"
    ],
    "showExplorer": [
      "workbench.view.explorer",
      "workbench.action.focusActiveEditorGroup"
    ],
    "showGit": [
      "workbench.view.scm",
      "workbench.action.focusActiveEditorGroup"
    ],
    "showSearch": [
      "workbench.view.search",
      "workbench.action.focusActiveEditorGroup"
    ],
    "focusCursorNewChat": [
      "workbench.action.focusAuxiliaryBar",
      "aichat.newchataction"
    ]
  },
  "explorer.confirmDragAndDrop": false,
  "explorer.confirmDelete": false,
  "editor.fontWeight": "500",
  "vscode-neovim.neovimInitVimPaths.darwin": "~/.config/nvim/init.lua",
  "vscode-neovim.neovimExecutablePaths.darwin": "/opt/homebrew/bin/nvim",
  "astro.updateImportsOnFileMove.enabled": true,
  "cSpell.enableFiletypes": ["!json"]
}
